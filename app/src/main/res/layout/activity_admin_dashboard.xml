<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    tools:context=".Activity.AdminDashboardActivity"
    >

    <!-- Tiêu đề + nút Thêm sản phẩm -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh sách sản phẩm"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:fontFamily="@font/be_vietnam_pro_semibold" />

        <Button
            android:id="@+id/btn_add_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm sản phẩm"
            android:textAllCaps="false"
            android:textColor="@color/white_000"
            android:backgroundTint="@color/red_E00"
            android:fontFamily="@font/be_vietnam_pro_semibold"/>
    </LinearLayout>

    <!-- Danh mục -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:id="@+id/layoutCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLaptop"
                style="@style/CategoryChip"
                android:textColor="@color/red_E00"
                android:textStyle="bold"
                android:text="Laptop" />

            <TextView
                android:id="@+id/tvDienThoai"
                style="@style/CategoryChip"
                android:textColor="@color/red_E00"
                android:textStyle="bold"
                android:text="Điện thoại" />

            <TextView
                android:id="@+id/tvTaiNghe"
                style="@style/CategoryChip"
                android:textColor="@color/red_E00"
                android:textStyle="bold"
                android:text="Tai nghe" />

            <TextView
                android:id="@+id/tvTablet"
                style="@style/CategoryChip"
                android:textColor="@color/red_E00"
                android:textStyle="bold"
                android:text="Tablet" />

            <TextView
                android:id="@+id/tvBanPhim"
                style="@style/CategoryChip"
                android:textColor="@color/red_E00"
                android:textStyle="bold"
                android:text="Bàn phím" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_sanpham"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:nestedScrollingEnabled="true"
        android:clipToPadding="false"
        android:paddingBottom="8dp"/>
</LinearLayout>
